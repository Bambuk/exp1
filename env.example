# Application settings
APP_NAME=Radiator CLI
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Database settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/radiator_db
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/radiator_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Email settings (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External APIs (optional)
EXTERNAL_API_KEY=your-api-key
EXTERNAL_API_URL=https://api.example.com

# Yandex Tracker API Configuration
TRACKER_API_TOKEN=your_tracker_api_token_here
TRACKER_ORG_ID=your_organization_id_here
TRACKER_BASE_URL=https://api.tracker.yandex.net/v2/
TRACKER_MAX_WORKERS=50
TRACKER_REQUEST_DELAY=0.1
TRACKER_SYNC_BATCH_SIZE=100

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here

# Reports Configuration
REPORTS_DIR=data/reports
TEST_REPORTS_DIR=tests/test_reports
